        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service behaviorConfiguration="mexBehavior" name="Image_Steganography_Service.HideAndSeek">
				<endpoint address="Steganography" binding="basicHttpBinding" contract="Image_Steganography_Service.IHideAndSeek" ></endpoint>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8000"/>
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
</configuration>